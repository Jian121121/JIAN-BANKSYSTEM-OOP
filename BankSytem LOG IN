    private void bexitActionPerformed(java.awt.event.ActionEvent evt) {                                      
        // Exit Button

        int result = JOptionPane.showConfirmDialog(null," Are you sure you want to exit?", "Admin",
            JOptionPane.YES_NO_OPTION,
            JOptionPane.WARNING_MESSAGE);
        if(result == JOptionPane.YES_OPTION){
            JOptionPane.showMessageDialog(null , "De Guzman, Jian, B. ITE 232");
            System.exit(0);
        }

    }                                     

    private void CreateActionPerformed(java.awt.event.ActionEvent evt) {                                       
        // TODO add your handling code here:
        // TODO add your handling code here:
        String username = jtuser.getText();
        String password = new String(jpassword.getPassword());
        // Check if username or password is empty
        if (username.isEmpty() || password.isEmpty()) {
            JOptionPane.showMessageDialog(null, "Username or password cannot be empty!");
            return;
        }       
        // Check if username already exists
        if (credentials.containsKey(username)) {
            JOptionPane.showMessageDialog(null, "Account already existed!");
        } else {
            // Add username-password pair to credentials
            credentials.put(username, password);
            // Set initial balance for the new account
            balances.put(username, 10000.0);
            JOptionPane.showMessageDialog(null, "Account created successfully!");
        }
    }                                      

